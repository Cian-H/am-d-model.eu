{
	admin off
}

timeouts {
	read_body 1h
	read_header 10s
	write 1h
	write 1h
}

am-d-model.eu {
	reverse_proxy site:3000 {
		health_uri /health
		health_interval 30s
		health_timeout 10s
		health_status 200
	}
}

invenio.am-d-model.eu {
	request_body {
		max_size 1TB
	}
	root /static/* /opt/invenio/var/instance/static
	try_files {path} {path}/ /index.html
	reverse_proxy invenio-rdm:5000
	file_server
	encode gzip
}
